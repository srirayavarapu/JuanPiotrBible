<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".Fragments.AllFragment">

    <SearchView
        android:id="@+id/search_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:iconifiedByDefault="false"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHeight_percent="0.07"
        ads:layout_constraintHorizontal_bias="0.5"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintWidth_percent="0.95"
        tools:ignore="MissingConstraints">

        <requestFocus />
    </SearchView>

    <ListView
        android:id="@+id/allListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        ads:layout_constraintTop_toBottomOf="@+id/search_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>